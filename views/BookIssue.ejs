<%- include('../views/Bookissue') %>
    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    </head>
    <style>
        body {
            background-color: bisque;
        }
    </style>

    <body>
        <h2 class="text-center">LIBRARY BOOK ISSUE </h2>
        <hr>

        <form action="/issue" method="POST">

            <input type="number" name="libid" placeholder="Library Id">
            <input type="number" name="Bookid" placeholder="Book Code">
            <input type="date" name="Date1" placeholder="Id">
            <button type="submit">Submit</button>

        </form>

        <ul class="quotes">

            <%
            for(var i=0; i<Book_Store.length; i++) {%>


                <li class="dm">
                    <span style="margin-left: 35px;font-weight: 900;"><%=Book_Store[i].Code %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp</span>
                    <span style="margin-left: 35px;font-weight: 900;"><%=Book_Store[i].id %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
                    <span style="top: 0; position: sticky;"><%=Book_Store[i].Lib_No%>  &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>

                </li>


        </ul>

    </body>

    </html>